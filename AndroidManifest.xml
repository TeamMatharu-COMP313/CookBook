<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teammatharu.cookbook"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainLandingPage"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Sub_Meal_Page"
            android:label="@string/title_activity_sub__meal__page"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Sub_Menu_Page"
            android:label="@string/title_activity_sub__menu__page"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Main_Recipe_Page"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_main__recipe__page" >
        </activity>
        <activity
            android:name=".MainDetailRecipePage"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_main_detail_recipe_page" >
        </activity>
        <activity
            android:name="com.teammatharu.recipefragments.MainRecipeFragment"
            android:label="@string/title_activity_main_recipe_fragment" >
        </activity>
        <activity
            android:name=".ContactUs"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_contact_us" >
        </activity>
        <activity
            android:name=".Video_Page"
             android:configChanges="orientation|screenSize"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:label="@string/title_activity_video__page" >
        </activity>
    </application>

</manifest>