<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teammatharu.cookbook.MainDetailRecipePage" 
    android:background="#37474f">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <!-- Image for recipe -->

            <ImageView
                android:id="@+id/imageViewDetailRecipe"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                />

            <!-- Details of image -->

            <TextView
                android:id="@+id/tvImageDetail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:textColor="#ffffff"
                android:textSize="15sp"/>

            <!-- Ingredients list 1 - 6 -->

            <TextView
                android:id="@+id/tvIngredients"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Ingredients : " 
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tvIngredientsList1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" 
                android:textColor="#ffffff"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tvIngredientsList2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" 
                android:textColor="#ffffff"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tvIngredientsList3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" 
                android:textColor="#ffffff"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tvIngredientsList4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" 
                android:textColor="#ffffff"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tvIngredientsList5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" 
                android:textColor="#ffffff"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tvIngredientsList6"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" 
                android:textColor="#ffffff"
                android:textSize="15sp"/>

            <!-- Direction 1 - 6 -->

            <TextView
                android:id="@+id/tvDirection"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Directions : " 
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tvDirectionList1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" 
                android:textColor="#ffffff"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tvDirectionList2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" 
                android:textColor="#ffffff"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tvDirectionList3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" 
                android:textColor="#ffffff"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tvDirectionList4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" 
                android:textColor="#ffffff"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tvDirectionList5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" 
                android:textColor="#ffffff"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tvDirectionList6"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" 
                android:textColor="#ffffff"
                android:textSize="15sp"/>

            <!-- Video Button -->

            <Button
                android:id="@+id/btnVideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@drawable/buttongradient"
                android:text="Watch Video"
                android:textColor="#ffffff" 
                android:layout_marginTop="15dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>