<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teammatharu.cookbook.MainLandingPage"
    android:background="#FFFFFF"
>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                     />

                <Button
                    android:id="@+id/btnCourses"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="Courses"
                    android:background="@drawable/buttongradient"
                    android:layout_marginBottom="5dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    />

                <Button
                    android:id="@+id/btnMeals"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="Meals" 
                    android:background="@drawable/buttongradient"
                    android:layout_marginBottom="5dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btnMain_Ingredients"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="Main Ingredients" 
                    android:background="@drawable/buttongradient"
                    android:layout_marginBottom="5dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btnOcc_Cooking"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="Occasions and Cooking Style" 
                    android:background="@drawable/buttongradient"
                    android:layout_marginBottom="5dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
